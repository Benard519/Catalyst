<script>
  // Load more articles functionality
  document.addEventListener('DOMContentLoaded', () => {
    const loadMoreBtn = document.getElementById('load-more-btn');
    let currentlyVisible = 3;
    const totalArticles = 6;

    loadMoreBtn?.addEventListener('click', () => {
      const hiddenArticles = document.querySelectorAll('[data-article]');
      let articlesToShow = Math.min(3, totalArticles - currentlyVisible);
      
      for (let i = 0; i < articlesToShow; i++) {
        const article = hiddenArticles[i];
        if (article) {
          article.classList.remove('hidden');
          currentlyVisible++;
        }
      }
      
      if (currentlyVisible >= totalArticles) {
        loadMoreBtn.style.display = 'none';
      }
    });
  });

  // Email modal functionality
  function showEmailModal(resourceId) {
    const modal = document.getElementById('email-modal');
    const description = document.getElementById('modal-description');
    
    // Customize description based on resource
    const descriptions = {
      'roi-guide': 'Get instant access to our comprehensive 50-page Digital Marketing ROI Guide with templates and case studies.',
      'audit-checklist': 'Download our 50-point Marketing Audit Checklist to identify growth opportunities in your business.',
      'roi-calculator': 'Get our Excel ROI Calculator Template with built-in formulas to track your marketing performance.',
      'content-calendar': 'Download our 12-month Content Calendar Template with content ideas and posting schedules.',
      'ppc-planner': 'Get our step-by-step PPC Campaign Planner for launching successful advertising campaigns.',
      'seo-guide': 'Download our complete SEO Keyword Research Guide with tools and competitor analysis techniques.',
      'social-workbook': 'Get our interactive Social Media Strategy Workbook for developing your social media plan.'
    };
    
    description.textContent = descriptions[resourceId] || 'Enter your email to download this valuable marketing resource instantly.';
    modal.classList.remove('hidden');
  }

  function closeEmailModal() {
    const modal = document.getElementById('email-modal');
    modal.classList.add('hidden');
  }

  // Close modal when clicking outside
  document.getElementById('email-modal')?.addEventListener('click', (e) => {
    if (e.target.id === 'email-modal') {
      closeEmailModal();
    }
  });
</script>