  };

  toggle?.addEventListener('change', (e) => {
    if (e.target.checked) {
      // Annual pricing
      starterPrice.textContent = annualPrices.starter;
      growthPrice.textContent = annualPrices.growth;
      enterprisePrice.textContent = annualPrices.enterprise;
    } else {
      // Monthly pricing
