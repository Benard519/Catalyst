  <!-- Hero Section -->
  <section class="pt-20 pb-16 bg-gradient-to-br from-primary-50 via-white to-secondary-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="animate-on-scroll">
        <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">Terms of Service</h1>
